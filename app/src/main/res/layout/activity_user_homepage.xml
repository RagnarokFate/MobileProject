<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:text="PROJECT"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabGravity="fill"
        app:tabTextAppearance="@style/MyCustomTabText">



    <com.google.android.material.tabs.TabItem
            android:id="@+id/feed_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/home"
            android:text="FEED" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/friends_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/friends"
            android:text="Friends"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="78dp" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/create_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/create_a_post"
            android:text="Create" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/profile_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/user_profile"
            android:text="Profile" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/settings_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/settings"
            android:text="Settings"
            tools:layout_editor_absoluteX="332dp"
            tools:layout_editor_absoluteY="40dp" />
    </com.google.android.material.tabs.TabLayout>

    <ListView
        android:layout_width="409dp"
        android:layout_height="612dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>
